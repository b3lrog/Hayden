@namespace Hayden.WebServer.View
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
	Layout = "_Layout";
	ViewData["Title"] = "Home page";
}

@foreach (var postCollection in Model.PostCollections)
{
    <br/>
    <hr/>

    @await Html.PartialAsync("~/View/ThreadPartialView.cshtml", new ThreadPartialViewModel(postCollection.Item1, postCollection.Item2, true))
}